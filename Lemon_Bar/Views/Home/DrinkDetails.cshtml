@model Drink
<html>
<body>
    <h2>@Model.strDrink</h2>

    @{List<string> ing = new List<string>();
        if (!String.IsNullOrEmpty(Model.strIngredient1)) { ing.Add(Model.strIngredient1); }
        if (!String.IsNullOrEmpty(Model.strIngredient2)) { ing.Add(Model.strIngredient2); }
        if (!String.IsNullOrEmpty(Model.strIngredient3)) { ing.Add(Model.strIngredient3); }
        if (!String.IsNullOrEmpty(Model.strIngredient4)) { ing.Add(Model.strIngredient4); }
        if (!String.IsNullOrEmpty(Model.strIngredient5)) { ing.Add(Model.strIngredient5); }
        if (!String.IsNullOrEmpty(Model.strIngredient6)) { ing.Add(Model.strIngredient6); }
        if (Model.strIngredient7 != null) { ing.Add(Model.strIngredient7.ToString()); }

    }

    @{List<string> mea = new List<string>();
        if (!String.IsNullOrEmpty(Model.strMeasure1)) { mea.Add(Model.strMeasure1); } else { mea.Add("Fill with"); }
        if (!String.IsNullOrEmpty(Model.strMeasure2)) { mea.Add(Model.strMeasure2); } else { mea.Add("Fill with"); }
        if (!String.IsNullOrEmpty(Model.strMeasure3)) { mea.Add(Model.strMeasure3); } else { mea.Add("Fill with"); }
        if (!String.IsNullOrEmpty(Model.strMeasure4)) { mea.Add(Model.strMeasure4); } else { mea.Add("Fill with"); }
        if (!String.IsNullOrEmpty(Model.strMeasure5)) { mea.Add(Model.strMeasure5); } else { mea.Add("Fill with"); }
        if (!String.IsNullOrEmpty(Model.strMeasure6)) { mea.Add(Model.strMeasure6); } else { mea.Add("Fill with"); }
        if (Model.strMeasure7 != null) { mea.Add(Model.strMeasure7.ToString()); } else { mea.Add("Fill with"); }





    }

    <h3>Ingredients:</h3>
    <ul>
        @{ int index = 0;
            foreach (string i in ing)
            {
                <li>@i: @mea[index]</li>
                index++;
            }
        }
    </ul>

    <p>@Model.strInstructions</p>

    <img src="@Model.strDrinkThumb" alt="@Model.strImageAttribution" style="height: 250px; width:auto" />

    @{string url = @Model.strVideo;
        if (url != null)
        {
            string URL = url.Replace("watch?v=", "embed/");
            <iframe width="560" height="315" src=@URL frameborder="0" allowfullscreen></iframe>
        }
    }

    <button class="buttony">
        <a asp-action="Create" asp-controller="DrinkSales" asp-route-id="@Model.idDrink">Make This Drink!</a>
    </button>

</body>
</html>
